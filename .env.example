# ===========================
# API Server Configuration
# ===========================
PAKIT_HOST=0.0.0.0
PAKIT_PORT=8000
PAKIT_LOG_LEVEL=INFO

# ===========================
# Storage Configuration
# ===========================
PAKIT_STORAGE_DIR=./storage
PAKIT_BACKEND=dag  # PRIMARY: dag, LEGACY: ipfs, arweave, local
PAKIT_ENABLE_ML=true

# ===========================
# DAG Storage (PRIMARY)
# ===========================
DAG_DB_PATH=./storage/dag.db
DAG_MAX_PARENTS=5
DAG_CACHE_SIZE=1000
DAG_ENABLE_COMPRESSION=true

# ===========================
# P2P Network
# ===========================
PAKIT_P2P_ENABLED=true
PAKIT_P2P_PORT=7777
PAKIT_DHT_PORT=7778
PAKIT_BOOTSTRAP_NODES=
PAKIT_MAX_PEERS=50

# ===========================
# Redis (Caching)
# ===========================
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# ===========================
# BelizeChain Integration (Production)
# ===========================
BLOCKCHAIN_ENABLED=false
BLOCKCHAIN_WS_URL=ws://localhost:9944
BLOCKCHAIN_HTTP_URL=http://localhost:9933

# Storage proof settings
STORAGE_PROOF_INTERVAL=100  # Register proof every N blocks
BNS_ENABLED=false           # BNS domain hosting

# ===========================
# Kinich Quantum Integration (Optional)
# ===========================
KINICH_ENABLED=false
KINICH_API_URL=http://localhost:8888

# Quantum compression settings
QUANTUM_MIN_SIZE=10240      # Min file size for quantum compression (10KB)
QUANTUM_TIMEOUT=30          # Timeout in seconds
QUANTUM_FALLBACK=true       # Fall back to classical on failure

# ===========================
# Nawal AI Integration (Future)
# ===========================
NAWAL_ENABLED=false
NAWAL_API_URL=http://localhost:8889

# ===========================
# ML Optimization
# ===========================
ML_ENABLE_COMPRESSION=true
ML_ENABLE_DEDUPLICATION=true
ML_ENABLE_PLACEMENT=true
ML_MODEL_DIR=./models

# ===========================
# Legacy Backends (DEPRECATED - Migration Only)
# ===========================
IPFS_ENABLED=false
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

ARWEAVE_ENABLED=false
ARWEAVE_GATEWAY=https://arweave.net
ARWEAVE_WALLET_PATH=

# ===========================
# Web Hosting (BNS Domains)
# ===========================
WEB_HOSTING_ENABLED=false
WEB_HOSTING_PORT=8443
SSL_CERT_DIR=./ssl_certs
AUTO_RENEW_CERTS=true

# ===========================
# CDN Configuration
# ===========================
CDN_ENABLED=false
CDN_EDGE_NODES=
CDN_CACHE_SIZE=10737418240  # 10GB

# ===========================
# Security
# ===========================
API_KEY_REQUIRED=false
API_KEY=
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# ===========================
# Development
# ===========================
DEBUG=false
MOCK_MODE=false  # Run without blockchain/Kinich for testing
